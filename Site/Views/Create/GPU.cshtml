@model Site.Models.CreateViewModel

@{
    ViewBag.Title = "GPU";
}

<h2>GPU - @Model.Item.Name</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.GPU.Series, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GPU.Series, new { htmlAttributes = new { @class = "form-control", id = "series", onkeyup = "CheckFields()" } })
                @Html.ValidationMessageFor(model => model.GPU.Series, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GPU.Chipset, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GPU.Chipset, new { htmlAttributes = new { @class = "form-control", id = "chipset", onkeyup = "CheckFields()" } })
                @Html.ValidationMessageFor(model => model.GPU.Chipset, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GPU.Memory, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GPU.Memory, new { htmlAttributes = new { @class = "form-control" , id = "memory", onkeyup = "CheckFields()" } })
                @Html.ValidationMessageFor(model => model.GPU.Memory, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GPU.CoreClock, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GPU.CoreClock, new { htmlAttributes = new { @class = "form-control" , id = "coreclock", onkeyup = "CheckFields()" } })
                @Html.ValidationMessageFor(model => model.GPU.CoreClock, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a type="button" class="btn btn-secondary btn-lg btn-block" id="continue">Missing Information</a>
            <a type="button" href="~/Inventory/Index" class="btn btn-secondary btn-lg btn-block">Cancel</a>
        </div>
    </div>
}

@section Scripts
{
    <script type="text/javascript">
        function CheckFields() {
            // Declare variables
            var series, chipset, memory, coreclock, button;
            // Get variables
            series = document.getElementById("series");
            chipset = document.getElementById("chipset");
            memory = document.getElementById("memory");
            coreclock = document.getElementById("coreclock");
            button = document.getElementById("continue");

            if (series.value.length > 0 &&
                chipset.value.length > 0 &&
                memory.value.length > 0 &&
                coreclock.value.length > 0) {
                button.className = "btn btn-primary btn-lg btn-block";
                button.href = "javascript:document.forms[0].submit()";
                button.textContent = "Continue"
            }
            else
            {
                button.className = "btn btn-secondary btn-lg btn-block";
                button.textContent = "Missing Information"
                button.removeAttribute("href");
            }

        }
    </script>

}