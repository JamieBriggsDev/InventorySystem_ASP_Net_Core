            @Html.EditorFor(m => m.ExtFiveBays, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.ExtFiveBays, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.IntThreeBays, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.IntThreeBays, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.IntThreeBays, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <a type="button" href="javascript:document.forms[0].submit()" class="btn btn-primary btn-lg btn-block">Create</a>
        <a type="button" href="~/Inventory/Index" class="btn btn-secondary btn-lg btn-block">Cancel</a>
    </div>
</div>
    }


