@model Database.Model.Case

@{
    ViewBag.Title = "Case";
}

<h2>Case</h2>

@using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Case</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Type, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Type, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Type, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ExtFiveBays, htmlAttributes: new { @class = "control-label col-md-2" })
